{
  "manifest_version": 3,
  "name": "StreetPass for Mastodon",
  "description": "Find your people on Mastodon",
  "version": "2023.3",
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content-script.js"]
    }
  ],
  "icons": {
    "128": "icon128.png",
    "256": "icon256.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "StreetPass",
    "default_icon": "action-inactive.png"
  }
}
