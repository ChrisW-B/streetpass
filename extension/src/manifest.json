{
  "manifest_version": 3,
  "name": "StreetPass for Mastodon",
  "description": "Discover users on Mastodon through the websites you visit",
  "version": "1.0",
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content-script.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "StreetPass",
    "default_icon": "icon-active.png"
  }
}
